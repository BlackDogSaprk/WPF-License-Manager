        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="TextBoxLicense" HorizontalAlignment="Left" Height="121" TextWrapping="Wrap" VerticalAlignment="Top" Width="497" Margin="10,188,0,0" IsReadOnly="True"/>
        <TextBox x:Name="TextBoxPublicKey" HorizontalAlignment="Left" Height="111" TextWrapping="Wrap" VerticalAlignment="Top" Width="497" Margin="10,41,0,0" TextChanged="TextBoxPublicKeyTextChanged"/>
        <Label Content="License Validation result:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,157,0,0"/>
        <Label Content="Enter the public key:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
    </Grid>
